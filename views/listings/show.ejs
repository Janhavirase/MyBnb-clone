<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">

    <h3>..<%=listing.title %>..</h3>
</div>
<div class="card col-6 offset-2 show-card offset-3 listing-card" >
<img src="<%=listing.image.url %>" class="card-img-top show-img" alt="...">
<div class="card-body">
    
    <p class="card-text"><b>
    <p> <%=listing.title %></b><br> </p>
    <p>  <i>Owned by:<%=listing.owner.username%></i></p>
    
<p>  <%=listing.description %>  <br> </p>  
<p>   &#8377;<%=listing.price.toLocaleString("en-IN") %> <br></p> 
<p> <%=listing.location %> <br></p> 
<p>   <%=listing.country %>  <br> </p> 

    
    
    </p>
    

</div>
</div>


    <br>
    <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
    <div class="btns ">
    <a href="/listings/<%=listing._id %>/edit" class="btn btn-dark col-1 offset-3 btn-edit">Edit</a>
    <br>
    <form action="/listings/<%=listing._id%>?_method=DELETE" method="post" class="btn btn-outline-dark   offset-5">
        <button>Delete this</button>
    </form>
</div>
<% } %>
 <% if(currUser) {%>
<div class="col-8 offset-3 mb-3">
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%=listing.id%>/reviews" method="post" novalidate class="needs-validation">
        <div class="mt-3 mb-3">
        <label for="rating" class="form-label">Rating</label>
       <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-control form-range"> 
   </div>
   <div>
    <label for="comment"class="form-label">Comments</label>
   <textarea name="review[comment]" id="comment"cols="30" rows="5" class="form-control mb-3" required></textarea>
   <div class="invalid-feedback">Please add some comments for review</div>
   </div>
   <button class="btn btn-outline-dark">Submit</button>
   
   
    </form>
    <% } %>


<h4>All Reviews</h4>
<div class="row">
<% for(review of listing.reviews){ %>
    <div class="card col-5 mb-3 ms-3">
<div class="card-body">
    <h5 class="card-title">@<%=review.author.username%></h5>
    <div class="card-text"><%=review.comment%></div>
    <p class="card-text"><%=review.rating%>stars</p>
</div>
<form class="mb-3" method="post"  action="/listings/<%=listing._id %>/reviews/<%=review._id%>"?_method="post" >
    <button class="btn btn-sm btn-dark">Delete </button>
</form>
    </div>
<% } %>
</div>





</div>
</div>
